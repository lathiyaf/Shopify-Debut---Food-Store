<section>
  <div class="hero_section">
    <div class="hero_section_inner">
      <div class="container">
        <div class="hero_section_info text-center">
          <h2 class="mb-0 white_color">{{ section.settings.title }}</h2>
        </div>
      </div>
    </div>
  </div>
</section>


<style>
  
  .hero_section{
    {% if section.settings.bg_image != blank %}
    background-image:url({{ section.settings.bg_image | img_url: '1920x300' }});
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    {% else %}
    background-color:{{ section.settings.bg_color }};
    {% endif %}
    height: 250px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
</style>


{% schema %}
  {
    "name": "Hero section",
	"class":"section_start",
    "settings": [
		{
          "type":"image_picker",
          "id":"bg_image",
          "label":"Background image"
		},
		{
          "type":"color",
          "id":"bg_color",
          "label":"Background color"
		},
		{
          "type":"text",
          "id":"title",
          "label":"Title"
		}
	]
  }
{% endschema %}
