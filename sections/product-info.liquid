{% if product.metafields.product_info_title != blank %}
<section class="product_info_section_main">
  <div class="up_wave mb-n1">
      <img class="w-100" src="https://cdn.shopify.com/s/files/1/0267/9373/8343/files/up_wave.svg" alt="up wave shape">
   </div>
  <div class="product_info_section_inner py-5">
    <div class="container">
      <div class="product_info_section_start">
        <ul class="list-unstyled mb-0">
          {% if product.metafields.product_info_title.how_to_use_title != blank %}
          <li class="product_info_list">
            <div class="product_info_title d-flex align-items-center justify-content-between active">
              <h2 class="mb-0">{{ product.metafields.product_info_title.how_to_use_title }}</h2>
              <i class="fas fa-chevron-down"></i>
            </div>
            <div class="product_info_section">
            	<div class="row blends_step_slider">
                  {% assign i = 0 %}
                  {% assign ii = 0 %}
                  {% assign iii = 0 %}
                  {% for block in product.metafields.product_info_section.how_to_use_step_text %}
                  <div class="{%- if product.metafields.product_info_section.how_to_use_step_text.size == 1 -%}col-md-12{%- endif -%}
                              {%- if product.metafields.product_info_section.how_to_use_step_text.size == 2 -%}col-md-6{%- endif -%}
                              {%- if product.metafields.product_info_section.how_to_use_step_text.size == 3 -%}col-md-4{%- endif -%}
                              {%- if product.metafields.product_info_section.how_to_use_step_text.size == 4 -%}col-md-3{%- endif -%}">
                     <div class="blends_step_column text-center p-3 h-100">
                        {% if block != blank %}
                        <h3>{{ block }} {{forloop.index}}</h3>
                        {% endif %}        
                       {% if product.metafields.product_info_section.how_to_use_video[i] != blank %}
                       <div class="blends_step_video my-3">
                          <video class="rounded" width="100%" height="100%" playsinline muted="" {% if forloop.first %} onended="blends_video_2()" autoplay {% endif %} {% if forloop.index == 2 %} onended="blends_video_3()" {% endif %} {% if forloop.index == 3 %} onended="blends_video_1()" {% endif %} {% if forloop.index == 4 %} onended="blends_video_4()" {% endif %} onclick="this.play()" id="blends_video_{{ forloop.index }}" {% if forloop.last == true %}poster="https://cdn.shopify.com/s/files/1/0267/9373/8343/files/blends_last_step_img.png?v=1628573057"{% endif %}>
                          	<source src="{{ product.metafields.product_info_section.how_to_use_video[i] }}" type="video/mp4"/>
                          </video>
                        </div>
                       {% endif %}
                        <div class="py-3">
                           {% if product.metafields.product_info_section.how_to_use_title[ii] != blank %}
                           <h3>{{ product.metafields.product_info_section.how_to_use_title[ii] }}</h3>
                           {% endif %}
                           {% if product.metafields.product_info_section.how_to_use_info[iii] != blank %}
                           <div>
                              {{ product.metafields.product_info_section.how_to_use_info[iii] }}
                           </div>
                           {% endif %}
                        </div>
                     </div>
                  </div>
                  {% assign i = i | plus: 1 %}
                  {% assign ii = ii | plus: 1 %}
                  {% assign iii = iii | plus: 1 %}
                  {% endfor %}
               </div>
            </div>
          </li>
          {% endif %}
          {% if product.metafields.whats_in_title.whats_in_the_kit_title != blank %}
          <li class="product_info_list">
            <div class="product_info_title d-flex align-items-center justify-content-between">
              <h2 class="mb-0">{{ product.metafields.whats_in_title.whats_in_the_kit_title }}</h2>
              <i class="fas fa-chevron-down"></i>
            </div>
            <div class="product_info_section section_hide">
                {{ product.metafields.whats_in_content.whats_in_the_kit_content }}
            </div>
          </li>
          {% endif %}
          {% if product.metafields.product_info_title.ingredients_title != blank %}
          <li class="product_info_list">
            <div class="product_info_title d-flex align-items-center justify-content-between">
              <h2 class="mb-0">{{ product.metafields.product_info_title.ingredients_title }}</h2>
              <i class="fas fa-chevron-down"></i>
            </div>
            <div class="product_info_section section_hide product_ingredients_section">
            	<div class="row justify-content-center">
                  {% assign i = 0 %}
                  {% for ingredients_img in product.metafields.product_info_section.ingredients_icon %}            
                    <div class="col-6 col-md-2 mb-md-5">
                      <div class="product-ingredients-column text-center">
                        {% if ingredients_img != blank %}
                        <div class="product-ingredients-icon mx-auto">
                            <img src="{{ ingredients_img }}" alt="product features icon"/>
                        </div>        
                        {% endif %}
                        {% if product.metafields.product_info_section.ingredients_title[i] != blank %}
                        <h4 class="mt-3">{{ product.metafields.product_info_section.ingredients_title[i] }}</h4>
                        {% endif %}
                      </div>
                    </div>
                    {% assign i = i | plus: 1 %}
                  {% endfor %}
                </div>
                {% if product.metafields.product_info_section.ingredients_info_section != blank %}
                <div class="products_ingredients_info_section">
                  {{product.metafields.product_info_section.ingredients_info_section}}
                </div>
                {% endif %}
            </div>
          </li>
          {% endif %}
          {% if product.metafields.product_info_title.nutritional_title != blank %}
          <li class="product_info_list">
            <div class="product_info_title d-flex align-items-center justify-content-between">
              <h2 class="mb-0">{{ product.metafields.product_info_title.nutritional_title }}</h2>
              <i class="fas fa-chevron-down"></i>
            </div>
            <div class="product_info_section section_hide">
            	<div class="row align-items-center">
                  <div class="col-md-7">
                    {% if product.metafields.product_info_section.nutritional_information != blank %}
                    <div class="nutritional_info">
                    	<img src="{{ product.metafields.product_info_section.nutritional_information }}" alt="nutritional information"/>
                    </div>
                    {% endif %}
                  </div>
                  <div class="col-md-5 d-none d-md-block">
                    <div class="nutritional_info_product_image">
                      {% if product.metafields.product_info_section.nutritional_product_image != blank %}
                      <div class="nutritional_info text-center">
                        <img src="{{ product.metafields.product_info_section.nutritional_product_image }}" alt="nutritional product"/>
                      </div>
                      {% endif %}
                    </div>
                  </div>
                </div>
            </div>
          </li>
          {% endif %}
          {% if product.metafields.product_info_title.care_packging_title != blank %}
          <li class="product_info_list">
            <div class="product_info_title d-flex align-items-center justify-content-between">
              <h2 class="mb-0">{{ product.metafields.product_info_title.care_packging_title }}</h2>
              <i class="fas fa-chevron-down"></i>
            </div>
            <div class="product_info_section section_hide">
              <div class="custom_list_style">
              	{{product.metafields.product_info_section.care_and_packaging}}
              </div>
            </div>
          </li>
          {% endif %}
          {% if product.metafields.product_info_title.allergy_info_title != blank %}
          <li class="product_info_list">
            <div class="product_info_title d-flex align-items-center justify-content-between">
              <h2 class="mb-0">{{ product.metafields.product_info_title.allergy_info_title }}</h2>
              <i class="fas fa-chevron-down"></i>
            </div>
            <div class="product_info_section section_hide">
                <h4 class="mb-0">{{ product.metafields.product_info_section.allergy_info }}</h4>
            </div>
          </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </div>
  <div class="up_wave mt-n1">
      <img class="w-100" src="https://cdn.shopify.com/s/files/1/0267/9373/8343/files/down_wave_2.svg" alt="down wave shape">
   </div>
</section>
{% endif %}

{% if section.settings.bg_color != blank %}
<style>
  .product_info_section_inner{
    background-color:{{section.settings.bg_color}};
  }
</style>
{% endif %}

<script>
var videoPlayer1 = document.getElementById("blends_video_1");

function blends_video_1(){
    videoPlayer1.play();
};  
  
var videoPlayer = document.getElementById("blends_video_2");

function blends_video_2(){
    videoPlayer.play();
};
  
var videoPlayer2 = document.getElementById("blends_video_3");

function blends_video_3(){
    videoPlayer2.play();
};  
  
{% if product.metafields.product_info_section.how_to_use_step_text.size == 4 %}  
var videoPlayer3 = document.getElementById("blends_video_4");

function blends_video_4(){
    videoPlayer3.play();
};  
{% endif %}  
</script>

{% schema %}
  {
    "name": "Product info",
	"class": "section_start",
    "settings": [
	  {
        "type": "color",
        "id": "bg_color",
        "label": "Background color"
      }
	]
  }
{% endschema %}
