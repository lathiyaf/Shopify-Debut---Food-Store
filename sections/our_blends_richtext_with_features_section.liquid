<section class="feature_row_section">
   <div class="feature_row_section_inner">
      <div class="container">
        <div class="section_header text-center pb-5">
          {% if section.settings.title != blank %}
            <h2 class="position-relative">{{ section.settings.title }}</h2>
          {% endif %}
          {% if section.settings.subtitle != blank %}
            <h5 class="secondary_color h3">{{ section.settings.subtitle }}</h5>
          {% endif %}
        </div>
        <div class="row align-items-center{% if section.settings.features_alignment == 'right' %} flex-row-reverse{% endif %}">
          <div class="col-md-6">
            <div class="row">
              {% for block in section.blocks %}
                {% if block.settings.features_icon != blank %}
                <div class="col-6 mb-4">
                  <div class="product-single-features-column text-center">
                      <div class="product-single-features-icon mx-auto">
                          <img src="{{ block.settings.features_icon | img_url:'large' }}" alt="product features icon"/>
                      </div>        
                      {% if block.settings.features_title != blank %}
                      <h4 class="mt-3">{{ block.settings.features_title }}</h4>
                      {% endif %}
                  </div>
                </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
          <div class="col-md-6">
            <div class="feature_row_column feature_row_info">
              <div class="text-center text-md-start"> 
              {% if section.settings.richtext != blank %}
                <div class="richtext">{{ section.settings.richtext }}</div>
              {% endif %}
              </div>
              {% if section.settings.btn_link != blank %}
                <div class="">
                  <a class="primary_btn" href="{{ section.settings.btn_link }}">{{ section.settings.btn_label }}</a>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
   </div>
</section>

{% schema %}
{
   "name": "Feature row Section",
   "class": "section_start",
   "settings": [
	  {
        "type": "header",
        "content": "title and info"
      },
	  {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
	  {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle"
      },
	  {
         "type": "header",
         "content": "Feature row Text info"
      },
      {
         "type": "richtext",
         "id": "richtext",
         "label": "Info"
      },
	  {
          "type": "url",
          "id": "btn_link",
          "label": "Button URL"
      },
      {
          "type": "text",
          "id": "btn_label",
          "label": "Button label"
      },
	  {
         "type": "header",
         "content": "Features alignment"
      },
	  {
         "type": "select",
         "id": "features_alignment",
         "label": "Features alignment",
         "options": [
           {
             "value": "left",
             "label": "Left"
           },
           {
             "value": "right",
             "label": "Right"
           }
         ],
         "default": "left"
      }
   ],
	"blocks":[
		{
			"type":"features",
			"name":"Features",
			"settings":[
				{
                  "type": "image_picker",
                  "id": "features_icon",
                  "label": "Features icon"
                },
				{
                  "type": "text",
                  "id": "features_title",
                  "label": "Features title"
                }
			]
		}
	]
}
{% endschema %}
