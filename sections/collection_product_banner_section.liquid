<section>
  <div class="collection_product_banner_section">
    <div class="collection_product_banner_section_inner">
      <div class="container">
        {% if section.settings.title != blank %}
        <div class="section_header text-center mb-md-5">            
            <h2 class="position-relative">{{ section.settings.title }}</h2>
            {% endif %}
            {% if section.settings.richtext != blank %}
            <h5>{{ section.settings.richtext }}</h5>            
         </div>
        {% endif %}
        <div class="collection_product_banner_section_start py-4">
          <div class="row align-items-center">
            {% if section.settings.banner_img != blank %}
            <div class="col-md-6">
              <div class="collection_product_banner_img">
              	<img class="lazyload" data-src="{{ section.settings.banner_img | img_url: "master" }}" alt="{{ section.settings.banner_img.alt }}" />
              </div>
            </div>            
            <div class="col-md-6 pt-4 pt-md-0 px-md-5">
              <div class="collection_product_banner_info text-center">
                {% if section.settings.banner_title_img != blank %}
                <div class="collection_product_banner_title">
                	<img class="lazyload w-75" data-src="{{ section.settings.banner_title_img | img_url: "master" }}" alt="{{ section.settings.banner_title_img.alt }}" />
                </div>
                {% endif %}
                {% if section.settings.banner_info != blank %}
                <div class="richtext my-3">
                	{{ section.settings.banner_info }}
                </div>
                {% endif %}
                {% if section.settings.btn_url != blank %}
                	<a href="{{ section.settings.btn_url }}" class="primary_btn">{{ section.settings.btn_label }}</a>
                {% endif %}
              </div>
            </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Collection product banner",
	"class":"section_start",
    "settings": [
		{
         "type": "header",
         "content": "section header"
        },
        {
           "type": "text",
           "id": "title",
           "label": "Title"
        },
        {
           "type": "text",
           "id": "richtext",
           "label": "Info"
        },
		{
         "type": "header",
         "content": "banner info"
        },
		{
           "type": "image_picker",
           "id": "banner_img",
           "label": "Banner Image"
        },
		{
           "type": "image_picker",
           "id": "banner_title_img",
           "label": "Banner Title Image"
        },
		{
           "type": "richtext",
           "id": "banner_info",
           "label": "Banner Info"
        },
		{
           "type": "url",
           "id": "btn_url",
           "label": "Button URL"
        },
		{
           "type": "text",
           "id": "btn_label",
           "label": "Button Label"
        }
	]
  }
{% endschema %}
