<div class="privacy_policy_main">
  <div class="privacy_policy_main_template">
  	<div class="container">
      <div class="section_header text-center mb-5">
        {% if section.settings.title != blank %}
        <h2 class="position-relative">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.richtext != blank %}
        <div class="richtext">{{ section.settings.richtext }}</div>
        {% endif %}
      </div>

      {% if page.content.size > 0 %}
      <div class="rte">
        {{ page.content }}
      </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Privacy policy",
    "settings": [
		{
            "type": "header",
            "content": "title and info"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "richtext",
            "id": "richtext",
            "label": "Info"
          }
	]
  }
{% endschema %}

